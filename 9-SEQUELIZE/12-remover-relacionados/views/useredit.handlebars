<div class="container-edit">
  <h1>Editando {{user.name}}</h1>
  <form action="/users/update" method="post" class="form">
    <input type="hidden" name="id" value="{{user.id}}">
    <div class="form-control">
      <label for="name">Nome:</label>
      <input type="text" name="name" placeholder="Digite o nome do usuário" value="{{user.name}}">
    </div>
    <div class="form-control">
      <label for="occupation">Profissão:</label>
      <input type="text" name="occupation" placeholder="Digite sua profissão" value="{{user.occupation}}">
    </div>
    <div class="form-control form-checkbox">
      {{#if user.newsletter}}
        <input type="checkbox" name="newsletter" checked>
      {{else}}
        <input type="checkbox" name="newsletter">
      {{/if}}
      <label for="newsletter">Enviar promoções?</label>
    </div>
    <input class="form-btn" type="submit" value="Editar">
  </form>
  <a href="/"><button class="form-btn form-seccond-btn">Voltar</button></a>

  <div class="address-container">
  <h2>Endereços:</h2>
  <form action="/address/create" method="POST">
    <input type="hidden" name="UserId" value="{{user.id}}">
    <div class="form-control">
      <label for="street">Rua:</label>
      <input type="text" name="street" placeholder="Digite a rua">
    </div>
    <div class="form-control">
      <label for="number">Número:</label>
      <input type="text" name="number" placeholder="Digite o número da residência">
    </div>
    <div class="form-control">
      <label for="city">Cidade:</label>
      <input type="text" name="city" placeholder="Digite o nome da cidade">
    </div>
    <input class="form-btn" type="submit" value="Incluir endereço">
  </form>
    <div class="address-list">
      <h2>Lista de endereços</h2>
      {{#if user.Addresses}}
        {{#each user.Addresses}}
          <div>
            <p>
              <strong>#{{this.id}}</strong> |
              {{this.street}}, {{this.number}} |
              {{this.city}}
            </p>
            <form action="/address/delete" method="POST">
            <input type="hidden" name="UserId" value="{{this.UserId}}">
              <input type="hidden" name="id" value="{{this.id}}">
              <input type="submit" value="Excluir">
            </form>
          </div>
        {{/each}}
      {{else}}
        <p>Não há endereços cadastrados ainda...</p>
      {{/if}}
    </div>
  </div>
</div>